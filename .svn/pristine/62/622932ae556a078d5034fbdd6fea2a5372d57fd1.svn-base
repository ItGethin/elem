body{
	height: 100%;
	// overflow: hidden;
	display: flex;
	flex-direction: column;
}
header{
	padding: .09rem;
	background-color: #c4bccc;
	// ba
	.h-top{
		height: .25rem;
		// line-height: .3rem;
		font-size: .2rem;
		padding: 0 .05rem;
		a{
			height: .18rem;
			width: .11rem;
			display: block;
			background: url('../images/back-shop.jpg');
		}
	}
	.h-cen{
		display: flex;
		a{
			display:flex;width: 100%;
		}
		.omg{
			width: .5445rem;
			height: .5445rem;
			border-radius: .1rem;
			img{
				width: 100%;
				border-radius: .05rem;
			}
		}

		.rmm{
			flex:1;
			// width: 100%;
			padding: 0 .05rem;
			h3{
				margin: 0;
				color:#fff;
				font-size: .15rem;
			}
			.text{
				span{
					font-size: .12rem;
					color:#fff;
				}
				i{
					float: right;
					width: .07rem;
					height: .12rem;
					background: url('../images/back-shop1.jpg');
				}
			}
			p{
				// width: 100%;
				margin: 0;
				width: 2.2rem;
				white-space: nowrap;
				text-overflow:ellipsis; 
				color:#fff;
				// overflow: deshed;
				overflow: hidden;
			}
		}
	}

	.h-bo{
		display: flex;
		justify-content:space-between;
		i{
			font-style: normal;
			color:#fff;
		}
		.h-bo-left{
			span{
				color:#fff;
				&:nth-child(1){
					background-color: green;
					margin-right:.05rem; 
				}
			}
		}
	}
}

.nav{
	display: flex;
	border-bottom: .01rem solid #efefef;
	background-color: #fff;
	>div{
		width: 50%;
		text-align: center;
		height: .4rem;
		line-height: .4rem;
		span{
			color:#777;
			padding:0 .05rem .05rem .05rem;
			&.active{
				color:#3190e8;
				border-bottom: .01rem solid #3190e8;
			}
		}
	}
}

.center{
	// height: 100%;
	// flex:1;
	height: 4rem;

	display: flex;
	nav{
		overflow-y:scroll; 
		width: 23%;
		border-right:.01rem solid #efefef; 
		background-color: #fff;
		ul{
			li{
				padding-left:.1rem; 
				border-bottom:.01rem solid #efefef; 
				height: .6rem;
				line-height: .6rem;
				&:last-child{
					border: none;
				}
			}
		}
	}
	.right{
		overflow-y:scroll; 
		flex:1;
		background-color: #fff;
		.cen-top{
			height: .28rem;
			line-height: .28rem;
			padding: 0 .08rem;
			background-color: #f1f1f1;
			i{
				float: right;
			}
			span{
				color:#c0c0c0;
				padding-left:.05rem; 
			}
			b{
				color:#666;
			}
		}

		.food{
			border-top: .01rem solid #efefef;
			height: .9rem;
			padding: .14rem;
			display: flex;
			position: relative;
			.food-img{
				width: .5rem;
				height: .5rem;
				img{
					width: 100%;
					border-radius:.05rem; 
				}
			}
			.detailed{
				
				padding-left:.08rem; 
				h3{
					margin: 0;
				}
				p{
					margin: 0;
					font-size: .12rem;
					color:#c0c0c0;
				}
				i{
					color:red;
					border:.01rem solid red;
					display: inline-block;
					font-style: normal;
				}
				em{
					font-style: normal;
					display: inline-block;
					color:#f60;
					font-weight: 900;
					font-size: .13rem;
					&.em{
						color:#777;
						font-size: .12rem;
						font-weight: 100;
						text-decoration: line-through;
					}
				}
			}

			>a{
					display: block;
					position: absolute;
					bottom: .2rem;
					right:.2rem;
					height: .2rem;
					text-align: center;
					color:#fff;
					font-weight: 400;
					font-size: .18rem;
					line-height: .2rem;
					width: .2rem;
					background-color: #0094ff;
					border-radius: 50%;
				}
		}
	}
}
footer{
	position: fixed;
	bottom: 0;
	width: 100%;
	height:.4rem;
	background-color: #474749;
	display: flex;
	.cart{
		background-color: #404040;
		height: .45rem;
		width: .45rem;
		display: flex;
		justify-content:center;
		align-items:center;
		margin-left:.1rem ;
		margin-top:-.2rem;
		border-radius:50%; 
		border:.05rem solid #4d4d4d;
	}
	.qian{
		padding-top:.08rem; 
		span{
			display: block;
			color:#fff;
		}
	}
	a{
			height: .4rem;
			display: block;
			float: right;
		    flex: 1;
		    text-align: end;
		    margin-left: 1rem;
		    background-color: #5c5c5e;
		    text-align: center;
		    line-height: .4rem;
		    color:#fff;
		}
}