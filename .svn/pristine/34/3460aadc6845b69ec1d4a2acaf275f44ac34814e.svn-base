<div class="content">

    <div class="header">

        <h1 class="page-title">商品表/商家</h1>
    </div>

    <ul class="breadcrumb">
        <li><a href="index">首页</a> <span class="divider">/</span></li>
        <li class="active">商家管理</li>
    </ul>

    <div class="container-fluid">
        <div class="row-fluid">

            <div class="btn-toolbar">
                <button class="btn btn-primary"><i class="icon-plus"></i><a href="<%=host%>/admin/slide/add">增加商家</a></button>

            </div>
            <div class="well">
                <table class="table">
                    <thead>
                    <tr>
                        <th>img</th>
                        <th>title</th>
                        <th>description</th>
                        <th>old_price</th>
                        <th>price</th>
                        <th>product_content</th>
                        <th style="width: 26px;"></th>
                    </tr>
                    </thead>
                    <tbody>
                        <% for(var i = 0; i < list.length; i++){ %>
                        <tr>
                            <td><img id="slideImg" src="<%=host%>/<%=list[i].img%>" /></td>
                            <td><%=list[i].title%></td>
                            <td><%=list[i].description%></td>
                            <td><%=list[i].old_price%></td>
                            <td><%=list[i].price%></td>
                            <td><%=list[i].product_content%></td>
                            <td>
                                <a href="<%=host %>/admin/slide/edit?id=<%=list[i]._id%>"><i class="icon-pencil"></i></a>
                                <a href="<%=host %>/admin/slide/delete?id=<%=list[i]._id%>"><i class="icon-remove"></i></a>
                            </td>
                        </tr>
                        <% } %>



                    </tbody>
                </table>
            </div>
            <div class="pagination">
                <ul>
                    <li><a href="#">Prev</a></li>
                    <li><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">Next</a></li>
                </ul>
            </div>

            <div class="modal small hide fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h3 id="myModalLabel">Delete Confirmation</h3>
                </div>
                <div class="modal-body">
                    <p class="error-text"><i class="icon-warning-sign modal-icon"></i>Are you sure you want to delete the user?</p>
                </div>
                <div class="modal-footer">
                    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
                    <button class="btn btn-danger" data-dismiss="modal">Delete</button>
                </div>
            </div>



            <footer>
                <hr>

                <!-- Purchase a site license to remove this link from the footer: http://www.portnine.com/bootstrap-themes -->
                <p class="pull-right">A <a href="http://www.portnine.com/bootstrap-themes" target="_blank">Free Bootstrap Theme</a> by <a href="http://www.portnine.com" target="_blank">Portnine</a></p>

                <p>&copy; 2012 <a href="http://www.portnine.com" target="_blank">Portnine</a></p>
            </footer>

        </div>
    </div>
</div>



<script src="<%=host%>/lib/bootstrap/js/bootstrap.js"></script>
<script type="text/javascript">
    $("[rel=tooltip]").tooltip();
    $(function() {
        $('.demo-cancel-click').click(function(){return false;});
    });
</script>

</body>
</html>


