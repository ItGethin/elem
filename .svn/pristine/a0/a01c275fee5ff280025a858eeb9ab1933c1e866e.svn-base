body{
	height: 100%;
	// overflow: hidden;
	display: flex;
	flex-direction: column;
}
header{
	// padding: .1rem;
	background-color: #2196f3;
	.h-top{
		width: 100%;
		display: flex;
		a{	display:inline-block;
			text-align: center;
			width: 20%;
			height: .38rem;
			background: url('../images/back-shows.jpg') .12rem .1rem no-repeat;
		}
		span{
			display:inline-block;
			line-height: .42rem;
			font-size: .17rem;
			font-weight: 500;
			height: .38rem;
			color:#fff;
			text-align: center;
			width: 60%;
		}
	}
}
section{
	margin-top:.08rem; 
}
.top{
	background-color: #fff;
	
	h3{padding-left: .12rem;
		margin: 0;
		line-height: .32rem;
		height: .32rem;
		border-bottom: .01rem solid #efefef;
		color:#696969;
		font-weight: 200;
	}
	ul{
		padding-left: .12rem;
		padding-top: .1rem;
		li{
			height: .26rem;
			line-height: .26rem;
			color:#696969;
		}
	}
}

.commen{
	.top{
		ul{
			li{	
				height: .38rem;
				line-height: .38rem;
				border-bottom: .01rem solid #efefef;
			}
		}
	}
}